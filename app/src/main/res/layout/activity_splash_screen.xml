<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:background="@color/sh_whitesmoke">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingBottom="400dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/shareit_splash"
            android:layout_gravity="center_horizontal|center_vertical"/>


        <com.andremarvell.shareit.view.ClearableEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/editbox_background_normal"
            android:textSize="@dimen/form_page_input_text_size"
            android:windowSoftInputMode="stateHidden"/>
        <com.andremarvell.shareit.view.CustomPasswordEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:password="true"
            android:hint="Mot de passe"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/editbox_background_normal"
            android:textSize="@dimen/form_page_input_text_size"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="20dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/inscription"
                android:layout_gravity="center_horizontal"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="S'inscrire"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:background="@color/sh_red"/>
            <Button
                android:id="@+id/connexion"
                android:layout_gravity="center_horizontal"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Se connecter"
                android:layout_marginLeft="20dp"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:background="@color/sh_green"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OU"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"/>

        <com.facebook.widget.LoginButton
            android:id="@+id/authButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Facebook"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0 "
            android:textColor="#ff545454"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â©Copyright - ShareIt"
            android:textColor="#ff545454"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>